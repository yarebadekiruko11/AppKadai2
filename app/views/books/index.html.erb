<!--一覧ページ-->

<table>
 <h1>Books</h1>

 <ul class="head">
  <li class="he">title</li>
  <li class="he">body</li>
  <li class="he">command</li>
 </ul>

 <p>
<% @books.each do |book| %>
 <span class="title"><%= book.title %></span>
 <span class="body"><%= book.body %></span>

 <span class ="tag">
  <%= link_to 'Show' ,book_path(book.id) %>
 </span>
 <span class ="tag">
  <%= link_to 'Edit' ,edit_book_path(book.id) %>
  </span>
 <span class ="tag">
  <%= link_to 'Destroy' ,destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
  </span>
 </br>

<% end %>

 </p>

</table>


<!--ここから新規投稿-->

<form class="sinki">
<h1>New book</h1>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul class="errors">
  <% @book.errors.full_messages.each do |message| %>
   <li class="er"><%= message %></li>
   <% end %>
 </ul>
<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>
</form>